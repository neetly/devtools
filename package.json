{
  "name": "@neetly/devtools",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "yarn workspaces foreach --all --topological-dev run build",
    "build:clean": "yarn workspaces foreach --all --topological-dev run build:clean",
    "check": "eslint && prettier --check .",
    "check:apply": "eslint --fix && prettier --write .",
    "publish": "yarn workspaces foreach --all --no-private npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@babel/cli": "8.0.0-alpha.8",
    "@babel/core": "8.0.0-alpha.8",
    "@neetly/babel-preset": "workspace:*",
    "@neetly/eslint-config": "workspace:*",
    "@neetly/tsconfig": "workspace:*",
    "@neetly/yarn-constraints": "workspace:*",
    "@yarnpkg/types": "4.0.0",
    "eslint": "9.3.0",
    "prettier": "3.2.5",
    "typescript": "5.5.0-beta"
  },
  "packageManager": "yarn@4.2.2"
}

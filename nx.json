{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",

  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },

  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "build:types"
        }
      }
    }
  ],

  "release": {
    "versionPlans": true,
    "releaseTagPattern": "{version}",
    "git": {
      "commitMessage": "Release {version}"
    },
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github"
      }
    }
  }
}
